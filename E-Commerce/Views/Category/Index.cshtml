@model IEnumerable<Category>

    <h1>Category List</h1>
<a asp-controller="Category" asp-action="Create"  class="btn btn-primary">
    Create
</a>
<br />

    <table class=" table table-hover" width="100%">

        <tr>

            <td>Name</td>
            <td>Description</td>
            <td>CreatedTime</td>
        </tr>
        @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a asp-controller ="Category" asp-action="Edit" asp-route-Id ="@item.Id"  class="btn btn-primary"> <i class=" bi bi-pencil-square"></i>Edit
                    </a>
                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-primary">
                    <i class=" bi bi-pencil-square"></i>Delete
                </a>
            </td>
              
                

            


        </tr>
    }


    </table>