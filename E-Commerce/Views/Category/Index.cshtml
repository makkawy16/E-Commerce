@model IEnumerable<Category>
@{

    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

    
<a asp-controller="Category" asp-action="Create"  class="btn btn-primary">
    Create
</a>
<br />

    <table class=" table table-hover" width="100%">

        <tr>

            <td>Name</td>
            <td>Description</td>
            <td>CreatedTime</td>
        <td>Actions</td>
        </tr>
        @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a asp-controller ="Category" asp-action="Edit" asp-route-Id ="@item.Id"  class="btn btn-success"> <i class=" bi bi-pencil-square"></i>Edit
                    </a>
                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">
                    <i class=" bi bi-pencil-square"></i>Delete
                </a>
            </td>
            
              
                

            


        </tr>
    }


    </table>