
<h1>Edit</h1>

@model Category
@{

    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Delete Category";
    
}

<form asp-action="DeleteCategory" method="post">
    <input hidden asp-for="Id"/>
    <div class="border p-3 mt-4">
       
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Name"  class="p-0"></label>
            <input asp-for="Name" disabled  class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description"  class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}