@model IEnumerable<ApplicationUser>
@{

    ViewBag.PageTitle = "Users Management";
    ViewBag.CardTitle = "View Users";



}


<a asp-controller="Account" asp-action="Register" class="btn btn-primary">
    Create New User
</a>
<br />

<table class=" table table-hover" width="100%">

    <tr>

        <td>Name</td>
        <td>Email</td>
        <td>PhoneNumber</td>
        <td>Actions</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>
               <a class="btn btn-success" asp-action="LockUnLock">
                   <i class=" fas fa-lock-open"></i>
               </a>
                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">
                    <i class=" bi bi-pencil-square"></i>Delete
                </a>
            </td>







        </tr>
    }


</table>
